              </div>
            </div>
            <div class="content">
{{#each menuItems as |menu|}}
    <div class="row mb-4" >
        <div class="col-md-12">
            <div class="card">
                    <p class="card-text">{{menu.name}}</p>
                    <p class="card-text">{{menu.price}}</p>
                </div>
            </div>
        </div>
    </div>
