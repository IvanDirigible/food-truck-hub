<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Add Your Food Truck:</h3>

    <form class="form new-foodtruck-form">
      <div class="form-group">
        <label for="foodtruck-name">Food Truck Name:</label>
        <input class="form-input" type="text" id="foodtruck-name" name="foodtruck-name" />
      </div>
      <div class="form-group">
        <label for="image-upload">Upload image:</label>
        <input class="form-input" type="number" id="image-upload" name="image-upload" />
      </div>
      <div class="form-group">
        <label for="foodtruck-desc">description:</label>
        <textarea class="form-input" id="foodtruck-desc" name="foodtruck-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if foodtrucks.length}}
  <div class="col-md-6 foodtruck-profile">
    <h3>Your Food Truck Info:</h3>

    {{#each foodtrucks as |foodtruck|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/foodtruck/{{foodtruck.id}}/profile">{{foodtruck.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{foodtruck.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>
<style>.row h2 {
    font-size: 24px;
    font-weight: bold;
    color: #333;
}

/* Styling for the form section */
.form {
    margin-top: 20px;
    padding: 20px;
    border: 1px solid #ccc;
    border-radius: 5px;
    background-color: #f9f9f9;
}

.form h3 {
    font-size: 20px;
    color: #333;
    margin-bottom: 15px;
}

.form-group {
    margin-bottom: 15px;
}

.form-group label {
    font-weight: bold;
    color: #555;
}

.form-input {
    width: 100%;
    padding: 8px;
    border-radius: 3px;
    border: 1px solid #ccc;
}

.btn-primary {
    background-color: #3498db;
    color: #fff;
    border: none;
    padding: 8px 16px;
    border-radius: 3px;
    cursor: pointer;
    font-weight: bold;
}

.btn-primary:hover {
    background-color: #258cd1;
}

/* Style adjustments for food truck profiles */
.foodtruck-profile {
    padding: 20px;
}

.foodtruck-profile h3 {
    font-size: 20px;
    color: #333;
    margin-bottom: 15px;
}

.foodtruck-profile h4 {
    font-size: 18px;
    color: #333;
    margin-bottom: 5px;
}

.btn-danger {
    background-color: #e74c3c;
    color: #fff;
    border: none;
    padding: 5px 10px;
    border-radius: 3px;
    cursor: pointer;
    font-size: 14px;
}

.btn-danger:hover {
    background-color: #d62c1f;
}
</style>
<script src="../public/js/foodtruck.js"></script>
