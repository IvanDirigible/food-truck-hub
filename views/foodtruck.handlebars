<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Add Your Food Truck:</h3>

    <form class="form new-foodtruck-form">
      <div class="form-group">
        <label for="foodtruck-name">Food Truck Name:</label>
        <input class="form-input" type="text" id="foodtruck-name" name="foodtruck-name" />
      </div>
      <div class="form-group">
        <label for="image-upload">Upload image:</label>
        <input class="form-input" type="number" id="image-upload" name="image-upload" />
      </div>
      <div class="form-group">
        <label for="foodtruck-desc">description:</label>
        <textarea class="form-input" id="foodtruck-desc" name="foodtruck-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if foodtrucks.length}}
  <div class="col-md-6 foodtruck-profile">
    <h3>Your Food Truck Info:</h3>

    {{#each foodtrucks as |foodtruck|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/foodtruck/{{foodtruck.id}}/profile">{{foodtruck.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{foodtruck.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="../public/js/foodtruck.js"></script>
